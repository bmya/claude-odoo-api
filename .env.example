# Odoo Multi-Company Configuration
# Each section [company_name] represents a different company/client configuration
# You can have multiple companies connecting to the same or different Odoo databases

# Company 1 - Main company in primary database
[company1]
ODOO_URL=http://localhost:8069
ODOO_DATABASE=your_database_name
ODOO_API_KEY=your_api_key_here
COMPANY_ID=1  # Optional: Odoo company_id (defaults to 1 if not specified)

# Company 2 - Another company in the same database
[company2]
ODOO_URL=http://localhost:8069
ODOO_DATABASE=your_database_name
ODOO_API_KEY=another_api_key_here
COMPANY_ID=2

# Company 3 - Company in a different database
[company3]
ODOO_URL=http://localhost:8069
ODOO_DATABASE=another_database_name
ODOO_API_KEY=yet_another_api_key
COMPANY_ID=1

# Production company example
[production]
ODOO_URL=https://your-odoo-instance.odoo.com
ODOO_DATABASE=production_db
ODOO_API_KEY=production_api_key_here
COMPANY_ID=1
